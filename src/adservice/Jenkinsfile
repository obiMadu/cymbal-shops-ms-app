pipeline {
    agent {
        label "ubuntu"
      }

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('cymbal-shops-docker-hub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Tag Docker Image') {
            steps {
                dir('src/adservice') {
                    script {
                        docker.build("${DOCKER_HUB_CREDENTIALS_USR}/adservice:latest")
                    }
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'cymbal-shops-docker-hub-credentials') {
                        docker.image("${DOCKER_HUB_CREDENTIALS_USR}/adservice:latest").push()
                    }
                }
            }
        }
    }
}

